{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++: Practice",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/build/practice",
            "args": [],
            "environment": [],
            "cwd": "${workspaceFolder}/cpp",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
        },
        {
            "name": "Python: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "cwd": "${workspaceFolder}/python",
            "console": "internalConsole",
            "justMyCode": false
        },
        {
            "name": "Python: Test",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/pytest",
            "args": [
                "--pdb",
                "${input:cases}"
            ],
            "cwd": "${workspaceFolder}/python",
            "console": "internalConsole",
            "justMyCode": false
        },
        {
            "name": "Python: File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/python",
            "console": "internalConsole",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "cases",
            "description": "Test case(s)",
            "type": "promptString",
            "default": ""
        }
    ]
}