{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test (Python)",
            "group": "test",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest",
                "${input:verbosity}",
                "${input:python_test_cases}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Run (Python)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "main.py",
            ],
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Build (C++)",
            "type": "shell",
            "group": "build",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/cpp/build"
            },
            "problemMatcher": [
                "$gcc",
            ]
        },
        {
            "label": "Test (C++)",
            "type": "shell",
            "command": "ctest",
            "args": [
                "-R",
                "${input:cpp_test_cases}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cpp/build"
            },
            "dependsOn": [
                "Build (C++)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Build (Rust)",
            "type": "shell",
            "group": "build",
            "command": "cargo",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Test (Rust)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "${input:rust_test_cases}",
                "${input:verbosity}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust"
            },
            "dependsOn": [
                "Build (Rust)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run (Rust)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--package",
                "practice",
                "--bin",
                "practice",
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust/target/debug"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Format (CMake)",
            "type": "process",
            "command": "gersemi",
            "args": [
                "-i",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cpp/build"
            },
            "presentation": {
                "reveal": "never",
                "focus": false,
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "cpp_test_cases",
            "description": "Test case(s)",
            "type": "promptString",
        },
        {
            "id": "rust_test_cases",
            "description": "Test case(s)",
            "type": "promptString",
        },
        {
            "id": "verbosity",
            "description": "Set the verbosity level",
            "type": "pickString",
            "options": [
                "",
                "-v",
                "-vv"
            ],
            "default": ""
        },
        {
            "id": "python_test_cases",
            "description": "Test case(s)",
            "type": "promptString",
            "default": ""
        }
    ]
}