{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run (Python)",
            "type": "shell",
            "command": "python3 ${input:run_file}",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Test (Python)",
            "group": "test",
            "type": "shell",
            "command": "python3 ${input:test_file} -v",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Run (Rust)",
            "type": "shell",
            "command": "cargo run --package ${input:test_file} --bin ${input:test_file}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "run_file",
            "description": "Pick a file to run",
            "type": "pickString",
            "options": [
                "main.py"
            ],
            "default": "main.py",
        },
        {
            "id": "test_file",
            "description": "Pick a file to test",
            "type": "pickString",
            "options": [
                "test.py"
            ],
            "default": "test.py",
        }
    ]
}