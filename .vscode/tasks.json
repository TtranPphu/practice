{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test (C++)",
            "type": "shell",
            "command": "ctest -R ${input:cpp_test_case}",
            "options": {
                "cwd": "${workspaceFolder}/cpp/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Format (CMake)",
            "type": "process",
            "command": "gersemi",
            "args": [
                "-i",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cpp/build"
            },
            "presentation": {
                "reveal": "never",
                "focus": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Run (Python)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "main.py",
            ],
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Test (Python)",
            "group": "test",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest",
                "${input:verbosity}",
                "${input:cases}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "problemMatcher": []
        },
        {
            "label": "Run (Rust)",
            "type": "shell",
            "command": "cargo run --package practice --bin practice",
            "options": {
                "cwd": "${workspaceFolder}/rust/target/debug"
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "cpp_test_case",
            "description": "Pick a case to test",
            "type": "promptString",
        },
        {
            "id": "problem_name",
            "description": "Name the problem",
            "type": "promptString",
        },
        {
            "id": "verbosity",
            "description": "Set the verbosity level",
            "type": "pickString",
            "options": [
                "",
                "-v",
                "-vv"
            ],
            "default": ""
        },
        {
            "id": "cases",
            "description": "Test case(s)",
            "type": "promptString",
            "default": ""
        }
    ]
}